<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/lin_btn"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">
          <TextView
              android:paddingLeft="10dp"
              android:id="@+id/orderNo"
              android:layout_alignParentLeft="true"
              android:textColor="@color/BLAK"
              android:gravity="center|right"
              android:paddingRight="10dp"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              />
          <TextView
              android:id="@+id/orderstatu"
              android:layout_alignParentRight="true"
              android:textColor="@color/create"
              android:gravity="center|right"
              android:paddingRight="10dp"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:text="等待买家付款"
              />
      </RelativeLayout>

    </LinearLayout>
    <View
        android:background="@color/def_bg"
        android:layout_width="match_parent"
        android:layout_height="0.5dp">

    </View>

    <LinearLayout
        android:id="@+id/order_view"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>
    <View
        android:background="@color/def_bg"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:gravity="right"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:textColor="@color/BLAK"
                android:id="@+id/num"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="共计1件商品"
                />

            <TextView
                android:textColor="@color/BLAK"
                android:id="@+id/productFee"
                android:paddingLeft="5dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="合计:¥19.89"
                android:layout_marginRight="10dp"
                />



        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/buttons"
        android:gravity="right|center"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingBottom="3dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <Button
                android:visibility="gone"
                android:id="@+id/ok_order"
                android:layout_marginRight="10dp"
                android:background="@drawable/border_line_blak"
                android:textColor="@color/BLAK"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="确认签收"
                />
            <Button
                android:visibility="gone"
                android:id="@+id/cancel_order"
                android:layout_marginRight="10dp"
                android:background="@drawable/border_line_blak"
                android:textColor="@color/BLAK"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="取消订单"
                />
            <Button
                android:visibility="gone"
                android:id="@+id/pay"
                android:layout_marginRight="10dp"
                android:background="@drawable/border_line_while"
                android:textColor="#FD8B26"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="付款"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
