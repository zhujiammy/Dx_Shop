<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/swipe_menu">


    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/lin_btn"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

       <!--     <ImageView
                android:padding="5dp"
                android:src="@mipmap/mrt"
                android:id="@+id/model_img"
                android:layout_width="130dp"
                android:layout_height="130dp" />-->
            <com.lid.lib.LabelImageView
                android:padding="5dp"
                android:src="@mipmap/mrt"
                android:id="@+id/model_img"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:scaleType="centerCrop"
                />

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="15sp"
                    android:id="@+id/model_title"
                    android:textColor="@color/BLAK"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OH/RZ201"
                    />
                <TextView
                    android:textSize="15sp"
                    android:id="@+id/series_name"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="女神款"
                    />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/label"
                        android:background="@color/red"
                        android:gravity="center_vertical"
                        android:textSize="15sp"
                        android:padding="2dp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥2199"
                        />


                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/sale_price"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textSize="23sp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/del_color"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="¥2199"
                        />


                </LinearLayout>




            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#f4f4f4" />
    </LinearLayout>

</LinearLayout>
