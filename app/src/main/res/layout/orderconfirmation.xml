<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="wrap_content"
    android:background="@color/def_bg"
    android:clickable="true"
    android:paddingBottom="1dp">


    <LinearLayout
        android:background="@color/white"
        android:id="@+id/lin_check"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/image"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/mrt"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="13dp" >

            <TextView
                android:id="@+id/productName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="电竞游戏王者荣耀反光衣服estar战队队服男短袖T恤衫学生青少年潮"
                android:textSize="13sp" />
            <TextView
                android:layout_marginTop="5dp"
                android:textColor="@color/BLAK"
                android:layout_below="@+id/productName"
                android:id="@+id/productAttr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="红色】【155/XS】"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/promotionTitle"
                android:layout_marginTop="5dp"
                android:background="@color/red"
                android:textColor="@color/white"
                android:layout_below="@+id/productAttr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="儿童节活动"
                android:textSize="13sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/salePrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:text="￥1200"
                    android:textColor="@color/red"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal" >


                    <TextView
                        android:id="@+id/quantity"
                        android:layout_width="32dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:gravity="center"
                        android:text="1"
                        android:digits="0123456789"
                        android:textSize="14sp"/>


                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>