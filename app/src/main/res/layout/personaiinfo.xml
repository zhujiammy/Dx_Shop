<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/defcolor"
    android:fitsSystemWindows="true"
    xmlns:tools="http://schemas.android.com/tools">
    <android.support.design.widget.AppBarLayout
        android:visibility="visible"
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center"
                android:textColor="@color/BLAK"
                android:textSize="20sp"
                android:text="个人信息"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                />

        </android.support.v7.widget.Toolbar>



    </android.support.design.widget.AppBarLayout>


    <ScrollView
        android:background="@color/defcolor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="400dp">

            <RelativeLayout
                android:id="@+id/profile_image_btn"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 头像"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:textSize="20sp"
                    />
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:layout_height="50dp"
                    android:src="@drawable/profile"
                    android:layout_toLeftOf="@+id/next"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#ffffff"/>

                <ImageView
                    android:id="@+id/next"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/nexts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"

                    />
            </RelativeLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/customerName_lin"
                android:layout_marginTop="0.5dp"
                android:background="@color/white"
                android:layout_marginBottom="0.5dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableRight="@mipmap/nexts"
                android:textSize="18sp"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" 姓名"
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/customerName"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:drawableRight="@mipmap/nexts"
                    android:textSize="18sp"
                    android:gravity="right|center"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/nickName_lin"
                android:layout_marginTop="0.5dp"
                android:background="@color/white"
                android:layout_marginBottom="0.5dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableRight="@mipmap/nexts"
                android:textSize="18sp"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" 昵称"
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/nickName"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:drawableRight="@mipmap/nexts"
                    android:textSize="18sp"
                    android:gravity="right|center"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/sex_lin"
                android:layout_marginTop="0.5dp"
                android:background="@color/white"
                android:layout_marginBottom="0.5dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableRight="@mipmap/nexts"
                android:textSize="18sp"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" 性别"
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/sex"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:drawableRight="@mipmap/nexts"
                    android:textSize="18sp"
                    android:gravity="right|center"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/birthday_lin"
                android:layout_marginTop="0.5dp"
                android:background="@color/white"
                android:layout_marginBottom="0.5dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableRight="@mipmap/nexts"
                android:textSize="18sp"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" 出生日期"
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/birthday"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:drawableRight="@mipmap/nexts"
                    android:textSize="18sp"
                    android:gravity="right|center"
                    />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>





</LinearLayout>
