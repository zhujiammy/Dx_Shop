<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/def_bg"
    android:fitsSystemWindows="true"
    xmlns:tools="http://schemas.android.com/tools">
    <android.support.design.widget.AppBarLayout
        android:visibility="visible"
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/title"
                android:layout_gravity="center"
                android:textColor="@color/BLAK"
                android:textSize="20sp"
                android:text="确认订单"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                />

        </android.support.v7.widget.Toolbar>



    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_below="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="2dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:id="@+id/select_address"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_weight="5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@drawable/address"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:textSize="15sp"
                                android:textColor="@color/BLAK"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="收货人:"
                                />

                            <TextView
                                android:id="@+id/shouhuoren"
                                android:textColor="@color/BLAK"
                                android:layout_marginLeft="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:textSize="15sp"
                                android:textColor="@color/BLAK"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="收货地址:"
                                />

                            <TextView
                                android:id="@+id/shouhuorendizhi"
                                android:textColor="@color/BLAK"
                                android:layout_marginLeft="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="江苏省无锡市滨湖区震泽路雪狼新区6号"
                                />
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_weight="5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="30dp"
                            android:src="@mipmap/nexts"
                            />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_group"
                android:background="@color/white"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </LinearLayout>

            <RelativeLayout
                android:background="@color/white"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="30dp">

               <LinearLayout
                   android:layout_alignParentRight="true"
                   android:layout_width="200dp"
                   android:layout_height="match_parent">
                   <TextView
                       android:id="@+id/prdouct_num"
                       android:gravity="center"
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       />

                   <TextView
                       android:layout_marginLeft="10dp"
                       android:gravity="center"
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:text="小计:"
                       />

                   <TextView
                       android:gravity="center"
                       android:textColor="@color/red"
                       android:id="@+id/zongjiprice"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent" />

               </LinearLayout>

            </RelativeLayout>
        </LinearLayout>


    </ScrollView>




<LinearLayout
    android:background="@color/white"
    android:orientation="horizontal"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textColor="@color/BLAK"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="合计金额:"
            />
        <TextView
            android:id="@+id/heji"
            android:textColor="@color/red"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="¥3232.00"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/confirm"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/red"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="提交订单"
            />

    </LinearLayout>



</LinearLayout>

</RelativeLayout>
