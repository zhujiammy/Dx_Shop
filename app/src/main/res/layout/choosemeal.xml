<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="409dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:paddingTop="12sp">

            <TextView
                android:id="@+id/salePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="105dp"
                android:textColor="@color/red"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="105dp" />

            <TextView
                android:id="@+id/itemNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/salePrice"
                android:layout_below="@+id/salePrice"
                android:layout_alignLeft="@+id/salePrice" />
<!--
            <LinearLayout
                android:id="@+id/ll_close"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="@dimen/sp_16"
                    android:layout_height="@dimen/sp_16"
                    android:src="@drawable/ic_delate"/>
            </LinearLayout>-->

            <TextView
                android:id="@+id/tv_have_choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/itemNo"
                android:text="已选择 "
                android:layout_alignLeft="@+id/itemNo" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="4px"
            android:layout_marginTop="12sp"
           />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f4f4f4" />

                <LinearLayout

                    android:id="@+id/lins"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="12sp"
                        android:layout_weight="1"
                        android:text="购买数量"
                        />

                    <ImageView
                        android:id="@+id/iv_sub"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_plus"/>

                    <EditText
                        android:id="@+id/et_good_num"
                        android:layout_width="32dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:gravity="center"
                        android:text="1"
                        android:digits="0123456789"
                        android:textSize="14sp"/>

                    <ImageView
                        android:id="@+id/iv_add"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="12sp"
                        android:src="@drawable/ic_add"/>
                </LinearLayout>
            </LinearLayout>

        </ScrollView>





        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
           />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/add_carts"
                android:gravity="center"
                android:background="@color/del_color"
                android:text="加入购物车"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />


            <TextView
                android:background="@color/red"
                android:text="立即购买"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />


        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="12dp"
        app:cardCornerRadius="8dp">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    </android.support.v7.widget.CardView>
</RelativeLayout>
