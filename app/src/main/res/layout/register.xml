<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    xmlns:tools="http://schemas.android.com/tools">
    <android.support.design.widget.AppBarLayout
        android:visibility="visible"
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center"
                android:textColor="@color/BLAK"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册"
                android:layout_centerInParent="true"
                />

        </android.support.v7.widget.Toolbar>



    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.zhujia.dx_shop.Tools.ClearEditText
            android:id="@+id/phone_num"
            android:hint="请输入手机号码"
            android:maxLength="11"
            android:inputType="phone"
            android:layout_marginTop="50dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

   <LinearLayout
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <com.example.zhujia.dx_shop.Tools.ClearEditText
           android:id="@+id/Graphicverificationcode"
           android:hint="请输入图形验证码"
           android:inputType="number"
           android:layout_weight="1"
           android:layout_marginLeft="40dp"
           android:maxLength="4"
           android:layout_width="match_parent"
           android:layout_height="50dp" />

       <ImageView
           android:layout_weight="2"
           android:layout_marginRight="40dp"
           android:id="@+id/verificationCode"
           android:layout_width="match_parent"
           android:layout_height="40dp"
           />


   </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.example.zhujia.dx_shop.Tools.ClearEditText
                android:id="@+id/phoneverificationcode"
                android:hint="请输入手机验证码"
                android:layout_weight="1"
                android:inputType="phone"
                android:layout_marginLeft="40dp"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <Button
                android:id="@+id/btnGetVerificationCode"
                android:background="@drawable/dialog_button3"
                android:text="获取验证码"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_weight="1"
                android:clickable="false"
                android:layout_marginRight="40dp"
                android:layout_width="match_parent"
                android:layout_height="30dp">
            </Button>


        </LinearLayout>
        <com.example.zhujia.dx_shop.Tools.ClearEditText
            android:id="@+id/pass"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/register_btn"
            android:background="@drawable/loginbt"
            android:textColor="@color/white"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="注册"

            />

    </LinearLayout>




</LinearLayout>
